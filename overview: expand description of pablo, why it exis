var paper  = Pablo($output[0]).root({height: 130}),
    circle = paper.circle({cx:60, cy:60, r:50, fill:'red'}),
    text   = paper.text({x:220, y:30}).content('we ♥ pablo');

paper.a({
    _link: 'https://github.com/dharmafly/pablo',
    target: '_blank'
})
(circle);

paper.a({
    _link: 'https://github.com/dharmafly',
    target: '_blank'
})
